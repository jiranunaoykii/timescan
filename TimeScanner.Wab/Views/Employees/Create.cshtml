@model TimeScanner.DSA.EF.Employee

@{
    ViewBag.Title = "Create";
    var token = Guid.NewGuid().ToString();
}

<h2>Create</h2>

<a href="http://localhost/ReaderOnce/TimeScanner.ClickOnce.application?token=@token">Read</a>
<input type="button" value="Refresh" onclick="refresh()" />
<script>
    function refresh() {
        var flickerAPI = "http://localhost:54260/api/CardReader/@token";
        $.getJSON(flickerAPI, function (json) {
            $('#@Html.IdFor(x=>x.PID)').val(json.PID);
            $('#@Html.IdFor(x=>x.TitleName)').val(json.TitleName);
            $('#@Html.IdFor(x=>x.FirstName)').val(json.FirstName);
            $('#@Html.IdFor(x=>x.LastName)').val(json.LastName);
        });
    }
</script>
