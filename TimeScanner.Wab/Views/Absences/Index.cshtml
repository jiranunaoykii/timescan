@model IEnumerable<TimeScanner.DSA.EF.Absence>

@{
    ViewBag.Title = "Index";
}

<h2>บันทึกการลา</h2>

<p>
    @Html.ActionLink("เพิ่มการลา", "Create")
</p>
<form method="post">
    วันที่
    <input name="day" class="form-control datepicker" id="day" type="date" value="@string.Format("{0:dd/MM/yyyy}", DateTime.Today)">
    <br />
    <input type="submit" class="btn btn-primary" value="แสดง" />
</form>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AbsenceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Document)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.EmployeeCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.AbsenceDate.ToString("dd MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("th-TH"))
            </td>
            <td>
                <a href='http://localhost/Documents/@item.Document'>@item.Document</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
