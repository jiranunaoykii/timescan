@model IEnumerable<TimeScanner.DSA.EF.Absence>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form method="post">
    <select name="day" class="form-control">
        @for (int i = 1; i <= 31; i++)
        {
            @Html.Raw("<option>" + i + "</option>")
        }
    </select>
    <select name="month" class="form-control">
        @for (int i = 1; i <= 12; i++)
        {
            @Html.Raw("<option value='" + i + "'>" + new DateTime(DateTime.Now.Year, i, 1).ToString("MMMM", System.Globalization.CultureInfo.GetCultureInfo("th-TH")) + "</option>")
        }
    </select>
    <select name="year" class="form-control">
        @for (int i = DateTime.Now.Year + 543; i > DateTime.Now.Year + 523; i--)
        {
            @Html.Raw("<option>" + i + "</option>")
        }
    </select>
    <input type="submit" class="btn btn-primary" />
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AbsenceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Document)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.EmployeeCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AbsenceDate)
            </td>
            <td>
                <a href='http://localhost/Documents/@item.Document'>@item.Document</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
