@model IEnumerable<TimeScanner.Wab.ViewModels.DailyReport>

@{
    ViewBag.Title = "Daily";
}

<h2>รายงานรายวัน</h2>
<form method="post">   
    วันที่ 
    <input name="day" class="form-control datepicker" id="day" type="date" value="@string.Format("{0:dd/MM/yyyy}", DateTime.Today)">
    <br />
    <input type="submit" class="btn btn-primary" value="แสดง" />
</form>
<br />
<br />
<table class="table">
        <tr>
                 <th>
                    รหัสพนักงาน
                </th>
                <th>
                   ชื่อ-นามสกุล
                </th>
                <td>
                    เวลาเข้างาน
                </td>
                <th>
                    เวลาออกงาน
                </th>
                <th>
                    สถานะ
                </th>
                <th>
                    หมายเหตุ
                </th>
                <th>
                    เพิ่มเติม
                </th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                <a href="@Url.Action("Monthly","Report", new { id = item.EmployeeCode, month = DateTime.Today.Month, year = DateTime.Today.Year})">ดู</a>
            </td>
        </tr>
    }

</table>
