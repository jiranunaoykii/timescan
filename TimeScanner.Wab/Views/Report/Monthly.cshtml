@model TimeScanner.DSA.EF.Employee

@{
    ViewBag.Title = "Monthly";
    int i = 1;
}

<h2>Monthly</h2>


<table class="table">
    <tr>
        <th>
            วันที่
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeScan.TimeIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeScan.TimeOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeScan.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.TimeScans)
    {
        <tr>
            <td>
                @(new DateTime(DateTime.Today.Year, DateTime.Today.Month, i))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
        i++;
    }

</table>